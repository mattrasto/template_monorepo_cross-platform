{
  "name": "magic-api",
  "version": "1.0.0",
  "description": "Magic platform backend and API",
  "scripts": {
    "dev": "doppler run --command \"node -r esm build/dev.js\"",
    "dev:staging_db": "doppler run -c stg --command \"cross-env DB_MODE=staging NODE_ENV=development node -r esm build/dev.js\"",
    "dev:start": "cross-env NODE_ENV=development npm-run-all --parallel dev:build dev:run",
    "dev:build": "webpack --watch --mode development --config webpack.config.js",
    "dev:run": "nodemon --config nodemon.json -r esm ./dist/server-compiled.js",

    "staging:start": "cross-env NODE_ENV=staging npm-run-all --sequential staging:build staging:run",
    "staging:build": "npm i && webpack --mode production --config webpack.config.js",
    "staging:run": "node -r esm ./dist/server-compiled.js",

    "prod:start": "cross-env NODE_ENV=production npm-run-all --sequential prod:build prod:run",
    "prod:build": "npm i && webpack --mode production --config webpack.config.js",
    "prod:run": "node -r esm ./dist/server-compiled.js",

    "lint": "eslint ./src/**/**.js",
    "lint:fix": "eslint ./src/**/**.js --fix",
    "lintonly": "git diff-index --name-only HEAD~1 | sed -n '/.*\\.js$/p' | xargs -t eslint --fix",
    "test-unit": "jest \\.unit\\.test\\.js$"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mattrasto/magic-api.git"
  },
  "engines": {
    "node": ">=15.0.0"
  },
  "devDependencies": {
    "@babel/core": "^7.17.10",
    "@babel/plugin-proposal-optional-chaining": "^7.16.7",
    "@babel/preset-env": "^7.17.10",
    "@babel/register": "^7.17.7",
    "babel-loader": "^8.2.5",
    "babel-polyfill": "^6.26.0",
    "eslint": "^7.32.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-prettier": "^8.5.0",
    "eslint-import-resolver-alias": "^1.1.2",
    "eslint-import-resolver-webpack": "^0.13.2",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-jest": "^26.1.5",
    "eslint-plugin-jsx-a11y": "^6.5.1",
    "eslint-plugin-prettier": "^4.0.0",
    "nodemon": "^2.0.16",
    "prettier": "^2.6.2",
    "sequelize-cli": "^6.4.1",
    "start-server-webpack-plugin": "^2.2.5"
  },
  "dependencies": {
    "@google-cloud/secret-manager": "^3.12.0",
    "async": "^3.2.3",
    "axios": "^0.27.2",
    "clean-webpack-plugin": "^4.0.0",
    "compression": "^1.7.4",
    "core-js": "^3.22.3",
    "cors": "^2.8.5",
    "cross-env": "^7.0.3",
    "deepmerge": "^4.2.2",
    "esm": "^3.2.25",
    "express": "^4.18.1",
    "express-minify": "^1.0.0",
    "express-session": "^1.17.2",
    "form-data": "^4.0.0",
    "glob": "^8.0.1",
    "jsonwebtoken": "^8.5.1",
    "mkdirp": "^1.0.4",
    "multer": "^1.4.4",
    "nodemailer": "^6.7.4",
    "npm-run-all": "^4.1.5",
    "password-hash": "^1.2.2",
    "pg": "^8.7.3",
    "require-context": "^1.1.0",
    "sequelize": "^6.19.0",
    "sequelize-replace-enum-postgres": "^1.6.0",
    "url-loader": "^4.1.1",
    "uuid": "^8.3.2",
    "uuid-validate": "0.0.3",
    "webpack": "^5.72.0",
    "webpack-cli": "^4.9.2",
    "webpack-dev-middleware": "^5.3.1",
    "webpack-hot-middleware": "^2.25.1",
    "webpack-merge": "^5.8.0",
    "webpack-node-externals": "^3.0.0"
  }
}
